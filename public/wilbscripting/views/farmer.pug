doctype html
html
    head
        title= title

        meta(charset="utf-8")

        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")

        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")

        link(href="https://fonts.googleapis.com/css2?family=Lobster&family=Oswald:wght@200;400&display=swap"
            rel="stylesheet")

        link(rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.8.2/css/all.css"
            integrity="sha384-xVVam1KS4+Qt2OrFa+VdRUoXygyKIuNWUUUBZYv+n27STsJ7oDOHJgfF0bNKLMJF" crossorigin="anonymous")

        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css")

        link(rel='stylesheet', href="/stylesheets/wbgui.css")

    body
        .container-fluid.h-100.w-100.d-flex.flex-column
            .row.text-center.justify-content-center.img-nav
                #nav-tab.nav.nav-tabs
                    a.active(data-toggle="tab" href="#farming-tab" role="tab" aria-controls="farming-tab" aria-selected="true")
                        img.img-btn.img-fluid.ml-3(src='/images/icons/tree.png')

                    a(data-toggle="tab" href="#tasks" role="tab" aria-controls="tasks" aria-selected="false")
                        img.img-btn.img-fluid.ml-3(src='/images/icons/task.png')

                    a(data-toggle="tab" href="#user" role="tab" aria-controls="user" aria-selected="false")
                        img.img-btn.img-fluid.ml-3(src='/images/icons/user.png')

                    a(data-toggle="tab" href="#settings" role="tab" aria-controls="settings" aria-selected="false")
                        img.img-btn.img-fluid.ml-3(src='/images/icons/settings.png')
            #main-content.container-fluid.mt-3.h-100
                .tab-content.h-100
                    #farming-tab.h-100.tab-pane.fade.show.active
                        .row.text-center.justify-content-center.h-100
                            #farm-runs.col-4.h-100
                                .mx-auto.table-wrapper.h-100.pb-3
                                    table#farm-run-table.table.table-borderless.h-100(cellpadding='0' cellspacing='0')
                                        thead
                                            tr
                                                th(scope='col')
                                                    | Farming Runs
                                        tbody.d-block.h-100

                                button.btn.btn-outline-red.btn-block.btn-sm Remove Farm Run

                            #farm-run-data.col-8.h-100
                                #farm-run-content.h-100
                                    nav.mb-2
                                        #farm-nav-tab.nav.nav-tabs.nav-justified
                                            a#tab-tasks.nav-item.nav-link.active(data-toggle="tab" href="#nav-tasks" role="tab") Tasks
                                            a#tab-inventory.nav-item.nav-link(data-toggle="tab" href="#nav-inventory" role="tab") Inventory
                                            a#tab-equipment.nav-item.nav-link(data-toggle="tab" href="#nav-equipment" role="tab") Equipment


                                    #farm-nav-content.tab-content.p-2.h-100
                                        #nav-tasks.tab-pane.fade.show.active
                                            .mx-auto.table-wrapper(height='15vh')
                                                table#farm-task-table.table.table-borderless.table-striped(cellpadding='0' cellspacing='0')
                                                    thead
                                                        tr
                                                            th(scope='col')
                                                                i.fas.fa-tree-alt.mr-2
                                                                | Plant
                                                            th(scope='col')
                                                                i.fas.fa-compass.mr-2
                                                                | Location
                                                            th(scope='col')
                                                                i.fas.fa-fill.mr-2
                                                                | Compost
                                                    tbody(style="height: 15vh")

                                            form#farm-task-form
                                                .form-group.row
                                                    label.col-sm-2.col-form-label.text-left(for="plant") Plant:
                                                    .col-sm-10
                                                        select#plant.selectpicker.form-control.input-outline
                                                            optgroup#ALLOTMENT(label="Allotment")
                                                            optgroup#FLOWER(label="Flower")
                                                            optgroup#HERB(label="Herb")
                                                            optgroup#TREE(label="Tree")
                                                            optgroup#FRUIT_TREE(label="Fruit Tree")

                                                .form-group.row.mt-2
                                                    label.col-sm-2.col-form-label.text-left(for="location") Location:
                                                    .col-sm-10
                                                        select#location.selectpicker.form-control.input-outline

                                                .form-group.row.mt-2
                                                    label.col-sm-2.col-form-label.text-left(for="compost") Compost:
                                                    .col-sm-10
                                                        select#compost.selectpicker.form-control.input-outline

                                                .form-group.row.mt-2.justify-content-between
                                                    .form-check
                                                        input#pay-to-protect.form-check-input(type="checkbox" )
                                                        label.text-left(for="pay-to-protect") Pay Farmer to Protect

                                                    .form-check
                                                        input#pay-to-remove.form-check-input(type="checkbox")
                                                        label.text-left(for="pay-to-remove") Pay Farmer to Remove


                                                .form-group.row.mt-2
                                                    .col-sm-5
                                                        button#remove-farm-task.btn.btn-outline-red.btn-block.btn-sm Remove Farm Task
                                                    .col-sm-5.offset-sm-2
                                                        button#add-farm-task.btn.btn-outline-green.btn-block.btn-sm Add Farm Task



                                        #nav-inventory.tab-pane.fade.show.row.h-100
                                            .col-8.h-100.text-center
                                                #inventory.text-left
                                                    img.inventory-image(src="https://i.imgur.com/fDenXX6.png" style="height: 80%")
                                                    .mt-3
                                                        button#grab-inventory.btn.btn-outline-green Grab Inventory
                                            .col-4
                                        #nav-equipment.tab-pane.fade.show.row.h-100
                                            .col-8.h-100.text-left
                                                #equipment.text-left
                                                    img.equipment-image(src="https://i.imgur.com/1gRNXyq.png" style="height: 80%")
                                                    .mt-3
                                                        button#grab-equipment.btn.btn-outline-green Grab Equipment

                                .form-group.row
                                    label.col-sm-3.col-form-label.text-left(for="run-name") Farming Run Name:
                                    .col-sm-9
                                        input#run-name.form-control.input-outline(type="text")

                                .form-group.mt-2
                                    button#add-farm-run.btn.btn-outline-green.btn-block.btn-sm Add Farm Run

                    #tasks.h-100.tab-pane.fade
                        | test
            footer.justify-content-between.w-100
                .container-fluid.justify-content-center
                    .row
                        .col-2.text-left
                        .col-8.text-center
                            img#stop.mr-0.mr-sm-5.img-btn.img-btn-lg(src='/images/icons/stop.png')
                            img#start.img-btn.img-btn-lg(src='/images/icons/play.png')
                        .col-2.text-right
                            button.fab.fa-discord.btn-no-bg.fa-2x.pt-3


        script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous")

        script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous")

        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous")

        script(src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js")

        script(src="/javascripts/app.js")
